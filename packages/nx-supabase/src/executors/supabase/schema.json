{
  "$schema": "https://json-schema.org/schema",
  "version": 2,
  "title": "Supabase executor",
  "description": "Runs Supabase CLI commands for a specific environment",
  "type": "object",
  "properties": {
    "env": {
      "type": "string",
      "default": "local",
      "description": "Environment to use (e.g., local, staging, production). Defaults to 'local'."
    },
    "command": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Supabase command to run (e.g., 'start', 'stop', ['migration', 'new', 'my_table'])"
    }
  },
  "required": ["command"]
}
